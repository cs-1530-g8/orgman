= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  %h2.form-signin-heading Forgot your password?
  = devise_error_messages!

  .form-group
    = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address'

  = f.submit 'Send me reset password instructions', class: 'btn btn-lg btn-primary btn-block'
= render 'devise/shared/links'

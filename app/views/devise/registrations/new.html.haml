= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f|
  = devise_error_messages!

  .col-sm-4
    %h2 Sign Up
    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email@example.com'

    .form-group
      = f.label :password
      = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password'

    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Retype Password'

    .form-group
      = f.label :first_name
      = f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Myron Mckee'

    .form-group
      = f.label :last_name
      = f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: 'Crandall'

    .form-group
      = f.label :phone_number
      = f.phone_field :phone_number, autofocus: true, class: 'form-control', placeholder: '4125555555 (no digit seperators)'

    .form-group
      = f.label :address
      = f.text_field :address, autofocus: true, class: 'form-control', placeholder: '716 Carriage Dr. Wexford PA 15090'

    %hr
    %h4 Undergrads Only:
    .form-group
      = f.label :two_p_number, '2P Number'
      = f.text_field :two_p_number, autofocus: true, class: 'form-control', placeholder: '2P000634328011Z'

    .form-group
      = f.label :about, 'Short Bio'
      = f.text_area :about, autofocus: true, class: 'form-control', placeholder: 'Provide a short bio of not more than 150 characters. Give your major and expected graduation date'

    .form-group
      = f.label :peoplesoft_number
      = f.number_field :peoplesoft_number, autofocus: true, class: 'form-control', placeholder: '3578411'

    .form-group
      = f.label :avatar, 'Profile Picture:'
      %p Upload a square image for best results. Your picture will appear distorted otherwise.
      = f.file_field :avatar

    .form-group
      = f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block'
